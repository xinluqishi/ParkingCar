<resources>

    <!-- 主体样式. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>  <!--第二栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>  <!--最上面栏-->
        <item name="colorAccent">@color/colorPrimaryDark</item>  <!--触碰色调-->
        <item name="actionBarSize">@dimen/activity__actionBarSize</item>  <!--第二栏 高度-->
        <!--<item name="android:navigationBarColor">@color/colorAccent</item>  &lt;!&ndash;如果有下面的导航背景颜色&ndash;&gt;-->
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialog</item>

    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.Holo.Widget.ActionBar.Title.Own
        </item>
    </style>

    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Own" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--提示框样式-->
    <!--提示框主体样式-->
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">    <!-- Used for the buttons -->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--首页按钮统一样式-->
    <style name="mainRBtn">
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@drawable/selector_main_rbtn_color</item>
        <item name="android:gravity">center</item>
    </style>
    <!--通用字体样式-->
    <style name="txtStyle">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="spinner_style">   
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <!--borderColor的竖着的一条间隔线-->
    <style name="lineStyle_border_vertical">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">0.1</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!--borderColor的一条线-->
    <style name="lineStyle_borderColor">
        <item name="android:background">@color/borderColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    <!--字体垂直居中-->
    <style name="txtStyle_centerVertical">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--星星-->
    <style name="order_detail_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--价格详情列表样式-->
    <style name="price_con_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mainTxt</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <!--审批页面头部选项卡-->
    <style name="my_approve_title_rbtn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:button">@null</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/selector_approve_rbtn</item>
        <item name="android:gravity">center</item>
    </style>
    <!--按钮基本样式-->
    <style name="btn_style_orange" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:button">@null</item>
        <item name="android:layout_height">38.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:background">@drawable/selector_cbtn_orange</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
    </style>
    <!--右侧箭头goright-->
    <style name="img_style_goright">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">4.5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:src">@drawable/ico_goright</item>
    </style>
    <!--右侧小箭头goright-->
    <style name="img_style_goright_sml">
        <item name="android:layout_height">8.5dp</item>
        <item name="android:layout_width">5.5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:src">@drawable/ico_goright_sml</item>
    </style>
    <!--law列表样式-->
    <style name="law_l_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <!--输入密码的黑边框-->
    <style name="topup_etxt_style">"
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:background">@drawable/shape_border_black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--输入密码连接的——-->
    <style name="topup_tv_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:text">—</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <!--行程中下面的三个按钮-->
    <style name="traveling_btn_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/deepGray</item>
    </style>
    <!--行程中分享的txt-->
    <style name="traveling_share_txt">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--体验卡中车的背景-->
    <style name="trycard_carbg">
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_width">60.5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/bg_trycard</item>
    </style>
    <!--体验卡底边-->
    <style name="trycard_border_bottom">
        <item name="android:layout_height">2.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/mainSTxt</item>
    </style>
    <!--体验卡文字基本样式-->
    <style name="trycard_title_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!--登陆注册页面的etxt-->
    <style name="login_etxt_style">
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <!--体验卡文字基本样式-->
    <style name="trycard_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/mainTxt</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--大片文字基本样式-->
    <style name="detail_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/lawcolor</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <!--文字头部圆点-->
    <style name="detail_text_dot">
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/shape_dot_law</item>
    </style>
    <!--文字头部圆点-->
    <style name="price_rule_txt">
        <item name="android:minHeight">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:paddingLeft">2.5dp</item>
        <item name="android:paddingRight">2.5dp</item>
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:background">@drawable/shape_border_table</item>
    </style>

</resources>
